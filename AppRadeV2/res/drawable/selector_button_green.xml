<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#058705"
                />
            <stroke
                android:width="1dp"
                android:color="#02a902"
                />
            <corners
                android:radius="5dp"
                />
            <padding
                android:left="10dp"
                android:right="10dp"
                />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#02a902"
                android:endColor="#02a902"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#02a902" />
            <corners
                android:radius="5dp" />

            <padding
                android:left="10dp"
                android:right="10dp"
                />
        </shape>
    </item>

</selector>
