<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#b22222"
                />
            <stroke
                android:width="1dp"
                android:color="#ee2c2c"
                />
            <corners
                android:radius="5dp"
                />
            <padding
                android:left="10dp"
                android:right="10dp"
                />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#ee2c2c"
                android:endColor="#ee2c2c"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ee2c2c" />
            <corners
                android:radius="5dp" />

            <padding
                android:left="10dp"
                android:right="10dp"
                />
        </shape>
    </item>

</selector>
