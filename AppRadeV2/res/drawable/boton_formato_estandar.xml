<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#3399ff"
           />
      <stroke
          android:width="1dp"
          android:color="#3399ff" 
          />
      <corners
          android:radius="25dp"
           />
      <padding
          android:left="10dp"
          android:right="10dp"
           />
    </shape>
  </item>
  
  <item>
    <shape>
      <gradient
          android:startColor="#C03399ff"
          android:endColor="#3399ff"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#C03399ff" />
      <corners
          android:radius="25dp" />
      
      <padding
          android:left="10dp"
          android:right="10dp"
         />
    </shape>
  </item>

</selector>
