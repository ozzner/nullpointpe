<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apprade"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="21" />

    <!-- PERMISOS DE INTERNET Y MAPAS -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- PERMISOS PARA EL GEOPOSICIONAMIENTO -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- PERMISOS PARA EL GEOPOSICIONAMIENTO -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- PARA LA USAR GOOGLE MAPS V2 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/img4"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >

        <!-- GOOGLE API KEY GENERADO -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDclT_TBXcH6HYB5RbRaWW9mdaH-DpO05Q" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <!-- FACEBOOK -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/appId" />
        <!-- ACTIVITIES -->
        <activity
            android:name=".activity.App_Splash_Activity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Usuario_Registro_Activity"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".activity.Usuario_Login_Activity"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".activity.App_GPSMapa_Activity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".App_GPSMapa_Activity" />
            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.SEARCH" /> -->
            <!-- </intent-filter> -->
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".activity.Usuario_Comentar_Activity"
            android:theme="@style/AppDialog" >
        </activity>
        <activity
            android:name=".activity.Intro_Activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <!-- <activity android:name=".facebook.FacebookConnector"></activity> -->
        <activity
            android:name=".activity.Mapa_AddEstablecimiento_Activity"
            android:label="@string/title_activity_mapa__add_establecimiento_"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.apprade.activity.Popup_AgregarEstablecimiento"
            android:label="@string/title_activity_popup__agregar_establecimiento"
            android:theme="@style/AppDialog">
        </activity>
    </application>

</manifest>